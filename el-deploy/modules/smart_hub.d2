# УМНЫЙ ХАБ ГОСТИНАЯ+КУХНЯ
smart_hub: Умный хаб Гостиная+Кухня {
  shape: rectangle
  width: 280
  height: 700
  style: {
    stroke: "#1565C0"
    fill: "#E3F2FD"
    stroke-width: 3
  }



  # === РЕЛЕЙНЫЕ МОДУЛИ ===
  relays_kitchen: {
    dining_chandelier_controller: Люстра обеденная
    kitchen_light_controller: Подсветка кухни
  }

  relays_living: {
    living_chandelier_controller: Люстра диванная
    dining_spots_controller: Споты обеденные
    living_spots_controller: Споты диванные
  }

}

# === ПОДКЛЮЧЕНИЕ РЕЛЕ К ВЫХОДАМ ===

# Кухня
smart_hub.kitchen_power -> kitchen.socket_1
smart_hub.kitchen_power -> kitchen.socket_2
smart_hub.kitchen_power -> kitchen.socket_3

smart_hub.relays_kitchen.dining_chandelier_controller -> kitchen.dining_chandelier
smart_hub.relays_kitchen.dining_chandelier_controller -> kitchen.switch_working

smart_hub.relays_kitchen.kitchen_light_controller -> kitchen.lighting
smart_hub.relays_kitchen.kitchen_light_controller -> kitchen.switch_working

smart_hub.kitchen_power -> kitchen.lighting
smart_hub.kitchen_power -> kitchen.hood
smart_hub.kitchen_power -> kitchen.dishwasher
smart_hub.kitchen_power -> kitchen.socket_fridge

# Гостиная
smart_hub.relays_living.living_chandelier_controller -> living.chandelier
smart_hub.relays_living.living_chandelier_controller -> living.switch_entrance

smart_hub.relays_living.dining_spots_controller -> living.dining_spots
smart_hub.relays_living.dining_spots_controller -> living.switch_entrance

smart_hub.relays_living.living_spots_controller -> living.spots
smart_hub.relays_living.living_spots_controller -> living.switch_entrance




smart_hub.living_power -> living.socket_tv
smart_hub.living_power -> living.socket_sofa_1
smart_hub.living_power -> living.socket_sofa_2
smart_hub.living_power -> living.socket_dining_1
smart_hub.living_power -> living.socket_dining_2
smart_hub.living_power -> living.ac



# === ГРУППИРОВКА ВЫХОДОВ ДЛЯ ЧИТАЕМОСТИ ===
kitchen: КУХНЯ {
  shape: rectangle
  style: {
    fill: "#FFF9C4"
  }
  socket_1: 🔌 Розетка рабочая 1
  dining_chandelier: 💡 Люстра обеденная
  lighting: 💡 Подсветка кухни
  hood: 💨 Вытяжка
  dishwasher: 🍽️ Посудомоечная машина
  socket_2: 🔌 Розетка рабочая 2
  socket_3: 🔌 Розетка рабочая 3
  socket_fridge: 🔌 Розетка холодильник
  switch_working: 🔘 Выключатель рабочая зона (2x кнопочный)
}

living: ГОСТИНАЯ {
  shape: rectangle
  style: {
    fill: "#E8F5E9"
  }
  chandelier: 💡 Люстра диванная
  dining_spots: 💡 Споты обеденные
  spots: 💡 Споты диванные
  socket_tv: 🔌 Розетка TV
  socket_sofa_1: 🔌 Розетка диван 1
  socket_sofa_2: 🔌 Розетка диван 2
  socket_dining_1: 🔌 Розетка обеденная 1
  socket_dining_2: 🔌 Розетка обеденная 2
  ac: ❄️ Кондиционер
  switch_entrance: 🔘 Выключатель вход (3x кнопочный)
}